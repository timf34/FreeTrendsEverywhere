{
  "name": "Free Trends Everywhere",
  "version": "1.0.0",
  "description": "Free basic version of Trends Everywhere - view Google Trends alongside your Google searches.",
  "manifest_version": 3,
  "author": "Tim Farrelly",
  "icons": {
    "16": "images/analytics16.png",
    "48": "images/analytics48.png"
  },
  "permissions" : ["activeTab", "storage", "https://*/*",  "<all_urls>"],
  "web_accessible_resources": [{
    "resources": ["images/*", "src/*", "*"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "src/content.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ]
}